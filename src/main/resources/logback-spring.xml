<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX, UTC}  %highlight(%5level) --- [%15.15thread] %cyan(%-44.44logger{26}) %green(%36X{requestId}) : %message%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout" />
    </root>

</configuration>